<div class="container my-3">
  <% if @lists.any? %>
    <div class="row">
      <% @lists.each do |list| %>
        <div class="col-6 col-md-4">
          <%= link_to list_path(list), class: 'text-decoration-none' do %>
            <div class="card">
              <div class="card-body">
                <h3 class="text-center"><%= list.name %></h3>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <h1>There are no lists</h1>
  <% end %>

  <%= link_to "Add", new_list_path, class: 'btn btn-primary mt-3' %>
</div>
